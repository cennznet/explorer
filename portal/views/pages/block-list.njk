{% set pageClass = 'block-list-page' %}
{% set menuKey = 'blocks' %}
{% from 'macros/pagination.njk' import pagination %}
{% from 'macros/link.njk' import blockLink, addrLink %}
{% extends 'layouts/default.njk' %}

{% block main %}
  <h1 class="main-heading">{{ _('navbar.blocks') }}</h1>

  <div class="block-section mobile-no-box-shadow">
    <div class="block-section__header--cols block-section__header--mobile-row">
      <div class="block-section__sub-header">
        <strong>{{ _('navbar.blocks') }}:</strong> ({{ filteredTotal | numberFormat }} {{ _('helper.field.total') }})
      </div>
      <div class="scroll-bar-wrapper mobile-no-margin">
        <div class="scroll-bar-div"></div>
      </div>
      <div class="filter-result mobile-padding-top-bottom-small">
        <div class="filter-result__result mobile-text-left">
          {{ _('filter.desc.displaying') }}
          <strong class="mobile-font-normal">{{ filteredResult | numberFormat }}</strong> {{ _('filter.desc.of') }}
          <strong class="mobile-font-normal">{{ filteredTotal | numberFormat }}</strong> {{ _('filter.desc.results') }}
        </div>
        <div class="filter-result__pagination mobile-hide">
          {{ pagination(baseUrl+'/blocks', page, pageCount) }}
        </div>
      </div>
    </div>
    <div class="block-section__content mobile-wrapper-block-table">
      <div class="block-table table-responsive-mobile table-responsive-lg mobile-no-margin">
        <table class="general-table block-list__table">
          <thead>
          <tr>
            <th scope="col">{{ _('common.table.header.number') }}</th>
            <th scope="col">{{ _('common.table.header.age') }}</th>
            <th scope="col">{{ _('common.table.header.transactions') }}</th>
            <th scope="col">{{ _('common.table.header.validators') }}</th>
            <th scope="col">{{ _('common.table.header.author') }}</th>
          </tr>
          </thead>
          <tbody>
          {% for block in blocks -%}
            <tr>
              <td>{{ blockLink(block.number, block.hash) }}</td>
              <td><div data-toggle="tooltip" title="{{block.timestamp | utcDate }}">{{ block.timestamp | ago }}</div></td>
              <td>{{ block.transactionCount }}</td>
              <td>{{ block.validators.length }}</td>
              <td>{{ addrLink(block.author) }}</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
    <div class="block-section__footer">
      {{ pagination(baseUrl+'/blocks', page, pageCount) }}
    </div>
  </div>
{% endblock %}
