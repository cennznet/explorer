{% set pageClass = 'address-detail-page' %}
{% set menuKey = 'transactions' %}
{% from 'macros/pagination.njk' import pagination %}
{% extends 'layouts/default.njk' %}


{% block main %}
  <h1 class="main-heading">{{ _('section.addressOverview') }}</h1>
  {% include 'partials/address/address-info.njk' %}
  <hr />
  {% include 'partials/address/address-tokens.njk' %}

  <div class="block-section is-mobile address-detail-page">
    <div class="block-section__header">
      <div>
        <h2><strong>{{ _('navbar.filter.transactions') }}:</strong> ({{ total | numberFormat }} {{ _('helper.field.total') }})</h2>
      </div>
      {% include 'partials/address/address-tx-header.njk' %}
      <div class="filter-result is-desktop">
        <div class="filter-result__result">
          {{ _('filter.desc.displaying') }}
          <strong>{{ filteredResult | numberFormat }}</strong> {{ _('filter.desc.of') }}
          <strong>{{ filteredTotal | numberFormat }}</strong> {{ _('filter.desc.results') }}
        </div>
        <div class="filter-result__pagination">
          {{ pagination(queryStr, page, pageCount) }}
        </div>
      </div>

  	  <hr />
    </div>
	<div class="is-mobile">
		<h2><strong>{{ _('navbar.transactions') }}</strong> ({{ total | numberFormat }} {{ _('helper.field.total') }})</h2>
	</div>
	
	<div class="scroll-bar-wrapper">
      <div class="scroll-bar-div"></div>
    </div>
	<div class="filter-result is-mobile">
        <div class="filter-result__result">
          {{ _('filter.desc.displaying') }}
          <strong>{{ filteredResult | numberFormat }}</strong> {{ _('filter.desc.of') }}
          <strong>{{ filteredTotal | numberFormat }}</strong> {{ _('filter.desc.results') }}
        </div>
      </div>

    </div>
    <div class="block-section__content address-tokens__table">
    <div class="mobile-wrapper-tx-table">
      {% include 'partials/address/tx-statement.njk' %}
	</div>
    </div>
    <div class="block-section__footer">
      {{ pagination(queryStr, page, pageCount) }}
    </div>
  </div>
{% endblock %}